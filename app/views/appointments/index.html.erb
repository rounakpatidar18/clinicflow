<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Appointments</h1>
  <%= link_to "New Appointment", new_appointment_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-light">
    <tr>
      <th>Patient</th>
      <th>Scheduled At</th>
      <th>Status</th>
      <th>Doctor</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.scheduled_at.strftime("%d %b %Y %I:%M %p") %></td>
        <td>
          <span class="badge bg-secondary">
            <%= appointment.status.humanize %>
          </span>
        </td>
        <td><%= appointment.doctor.name %></td>
        <td>
          <%= link_to "Show", appointment, class: "btn btn-sm btn-info" %>
          <%= link_to "Edit", edit_appointment_path(appointment), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", appointment, method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
