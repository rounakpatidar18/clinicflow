<h1 class="mb-4">Clinic Dashboard</h1>

<div class="row g-4">

  <div class="col-md-4">
    <div class="card text-bg-primary">
      <div class="card-body">
        <h5>Total Appointments</h5>
        <h2><%= @total_appointments %></h2>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-bg-success">
      <div class="card-body">
        <h5>Upcoming Appointments</h5>
        <h2><%= @upcoming_appointments %></h2>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-bg-info">
      <div class="card-body">
        <h5>Completed Appointments</h5>
        <h2><%= @completed_appointments %></h2>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-bg-warning">
      <div class="card-body">
        <h5>Total Revenue</h5>
        <h2><%= number_to_currency(@total_revenue) %></h2>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-bg-danger">
      <div class="card-body">
        <h5>Pending Payments</h5>
        <h2><%= @pending_payments %></h2>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-bg-secondary">
      <div class="card-body">
        <h5>Pending Reminders</h5>
        <h2><%= @pending_reminders %></h2>
      </div>
    </div>
  </div>

</div>
